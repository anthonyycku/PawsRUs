<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/head.ejs') %>
</head>

<body>
  <div id="container">
    <%- include ('../partials/nav.ejs') %>

    <div id="firstContainer" class="container-fluid" style="max-width: 600px; border-radius: 10px; padding: 10px;">
      <h2>Create new data</h2>
      <form action="/main/new" method="POST">
        <!-- NAME AND AGE -->
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
              <input name="name" type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
            </div>
          </div>
          <div class="col-sm-3">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Age</span>
              <input name="age" type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
            </div>
          </div>
        </div>
        <!-- BREED -->
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Breed</span>
              <input name="breed" type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
            </div>
          </div>
          <!-- CHECKS -->
          <div class="row" style="margin-bottom: 10px;">
            <div class="col-sm-4">
              <div class="form-check">
                <input name="goodWithKids" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Good with kids
                </label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input name="goodWithCats" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Good with cats
                </label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input name="goodWithDogs" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Good with dogs
                </label>
              </div>
            </div>
          </div>
          <!-- DESCRIPTION -->
          <div class="row" style="margin-bottom: 10px;">
            <div class="input-group">
              <span class="input-group-text">Description</span>
              <textarea name="description" class="form-control" aria-label="With textarea"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <button class="btn btn-success">Create</button>
            </div>
          </div>
      </form>
    </div>
    <!--End of firstContainer-->




  </div>
  <!-- End of container -->
</body>

</html>