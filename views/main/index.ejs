<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/head.ejs') %>
</head>

<body>
  <div id="container">
    <%- include ('../partials/nav.ejs') %>

    <!-- header bar -->
    <div class="container-fluid" style="max-width: 1100px;">
      <div class="row">
        <div id="headerBar" class="col-md-6" style="height: 80px;">
          <h1 style="font-size: 4em; text-align: center; color:#003664">Adopt</h1>
        </div>
      </div>
    </div>
    <!-- Main content -->
    <div id="firstContainer" class="container-fluid" style="max-width: 1100px;">

      <!-- Row -->
      <div class="row" style="display: flex; justify-content: center;">
        <!-- Article -->
        <div class="col-sm-11" style="display: flex; flex-wrap: wrap;">
          <%for (let pet of data) { %>
          <!-- Card -->
          <div class="card" style="width: 220px; margin: 10px;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=pet.name%></h5>
              <p class="card-text">Age: <%=pet.age%></p>
              <p class="card-text">Breed: <%=pet.breed%></p>
              <a href="#" class="">More info...</a>
            </div>
          </div>
          <!-- End of card -->
          <% } %>
        </div>
        <!--End of article-->
      </div> <!-- End of Row-->

      <!-- Pagination -->
      <div class="row" style="display: flex; justify-content: center;">
        <div id="pagination" class="col-sm-11" style="display: flex; justify-content: center;">
          <nav aria-label="Page navigation example">

            <ul class="pagination justify-content-center">
              <!-- IF THERE IS NO DATA -->
              <% if (pages === 0) {%>
              <li class="page-item disabled">
                <a class="page-link" href="#" aria-disabled="true">Previous</a>
              </li>
              <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
              </li>
              <!-- IF CURRENT PAGE IS 1 -->
              <% } else if (currentPage == 1 && pages > 1) {%>
              <li class="page-item disabled">
                <a class="page-link" href="#" aria-disabled="true">Previous</a>
              </li>
              <% for (let i = 1; i <= pages; i++) { %>
              <% if (i === currentPage) { %>
              <li class="page-item disabled"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
              <% } else {%>
              <li class="page-item"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
              <% } }%>
              <li class="page-item">
                <a class="page-link" href="/main/<%=currentPage + 1%>">Next</a>
              </li>
              <!-- IF CURRENT PAGE IS IN MIDDLE -->
              <% } else if (currentPage < pages) {%>
              <li class="page-item">
                <a class="page-link" href="/main/<%=currentPage - 1%>" aria-disabled="true">Previous</a>
              </li>
              <% for (let i = 1; i <= pages; i++) { %>
              <% if (i === currentPage) { %>
              <li class="page-item disabled"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
              <% } else {%>
              <li class="page-item"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
              <% } }%>
              <li class="page-item">
                <a class="page-link" href="/main/<%=currentPage + 1%>">Next</a>
              </li>
              <!-- IF CURRENT PAGE IS LAST -->
              <% } else if (currentPage === pages && pages > 1) {%>
              <li class="page-item">
                <a class="page-link" href="/main/<%=currentPage - 1%>" aria-disabled="true">Previous</a>
              </li>
              <% for (let i = 1; i <= pages; i++) { %>
              <% if (i === currentPage) { %>
              <li class="page-item disabled"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
              <% } else {%>
              <li class="page-item"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
              <% } }%>
              <li class="page-item disabled">
                <a class="page-link" href="/main/<%=currentPage + 1%>">Next</a>
              </li>
              <% } %>
            </ul>

          </nav>
        </div>
      </div>
      <!-- End of pagination 2 -->
    </div> <!-- End of Main content-->

  </div>
  </div>
</body>

</html>