<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/head.ejs') %>
</head>

<body>
  <div id="container">
    <%- include ('../partials/nav.ejs') %>

    <div id="firstContainer" class="container-fluid" style="max-width: 600px; border-radius: 10px; padding: 10px;">
      <div class="row">
        <img src="/images/dog-banner.png">
      </div>
      <h2>Edit Entry </h2>
      <br>
      <form action="/main/edit/<%=pet.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <!-- NAME AND AGE -->
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
              <input autocomplete="off" name="name" type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default" value="<%=pet.name%>" required>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Age</span>
              <input autocomplete="off" name="age" type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default" value="<%=pet.age%>">
            </div>
          </div>
        </div>
        <!-- BREED -->
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Breed</span>
              <input autocomplete="off" name="breed" type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default" value="<%=pet.breed%>">
            </div>
          </div>
          <!-- CHECKS -->
          <div class="row" style="margin-bottom: 10px;">
            <div class="col-sm-4">
              <div class="form-check">
                <input name="goodWithKids" class="form-check-input" type="checkbox" id="flexCheckDefault"
                  <% if (pet.goodWithKids === true) {%> checked <% }%>>
                <label class="form-check-label" for="flexCheckDefault">
                  Good with kids
                </label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input name="goodWithCats" class="form-check-input" type="checkbox" id="flexCheckDefault"
                  <% if (pet.goodWithCats === true) {%> checked <% }%>>
                <label class="form-check-label" for="flexCheckDefault">
                  Good with cats
                </label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input name="goodWithDogs" class="form-check-input" type="checkbox" id="flexCheckDefault"
                  <% if (pet.goodWithDogs === true) {%> checked <% }%>>
                <label class="form-check-label" for="flexCheckDefault">
                  Good with dogs
                </label>
              </div>
            </div>
          </div>
          <!-- DESCRIPTION -->
          <div class="row" style="margin-bottom: 10px;">
            <div class="input-group">
              <span class="input-group-text">Description</span>
              <textarea name="description" class="form-control"
                aria-label="With textarea"><%=pet.description%></textarea>
            </div>
          </div>
          <!-- IMAGE UPLOAD -->
          <div class="row">
            <div class="mb-3">
              <label for="formFile" class="form-label">Upload Image:</label>
              <input name="image" class="form-control" type="file" id="formFile">
              <p style="margin: 0;"><i><strong>Note: Leaving upload empty will keep the default picture.</strong></i>
              </p>
            </div>
          </div>
          <!-- Submit -->
          <div class="row">
            <div class="col-sm-12" style="display: flex; justify-content: space-between;">
              <a class="btn btn-warning" href="/main/show/<%=pet._id%>">Back</a>
              <input type="submit" class="btn btn-success" value="Submit Changes">

            </div>
          </div>
      </form>
    </div>

  </div>
</body>

</html>