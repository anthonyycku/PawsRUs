 <!-- Pagination -->
 <div class="row" style="display: flex; justify-content: center; align-items: flex-end; height: 100px;">
     <div id="pagination" class="col-sm-11" style="display: flex; justify-content: center;">
         <nav aria-label="Page navigation example">

             <ul class="pagination justify-content-center">
                 <!-- IF THERE IS NO DATA -->
                 <% if (pages === 0) {%>
                 <li class="page-item disabled">
                     <a class="page-link" href="#" aria-disabled="true">Previous</a>
                 </li>
                 <li class="page-item disabled">
                     <a class="page-link" href="#">Next</a>
                 </li>
                 <!-- IF CURRENT PAGE IS 1 -->
                 <% } else if (currentPage == 1 && pages > 1) {%>
                 <li class="page-item disabled">
                     <a class="page-link" href="#" aria-disabled="true">Previous</a>
                 </li>
                 <% for (let i = 1; i <= pages; i++) { %>
                 <% if (i === currentPage) { %>
                 <li class="page-item disabled"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
                 <% } else {%>
                 <li class="page-item"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
                 <% } }%>
                 <li class="page-item">
                     <a class="page-link" href="/main/<%=currentPage + 1%>">Next</a>
                 </li>
                 <!-- IF CURRENT PAGE IS IN MIDDLE -->
                 <% } else if (currentPage < pages) {%>
                 <li class="page-item">
                     <a class="page-link" href="/main/<%=currentPage - 1%>" aria-disabled="true">Previous</a>
                 </li>
                 <% for (let i = 1; i <= pages; i++) { %>
                 <% if (i === currentPage) { %>
                 <li class="page-item disabled"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
                 <% } else {%>
                 <li class="page-item"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
                 <% } }%>
                 <li class="page-item">
                     <a class="page-link" href="/main/<%=currentPage + 1%>">Next</a>
                 </li>
                 <!-- IF CURRENT PAGE IS LAST -->
                 <% } else if (currentPage === pages && pages > 1) {%>
                 <li class="page-item">
                     <a class="page-link" href="/main/<%=currentPage - 1%>" aria-disabled="true">Previous</a>
                 </li>
                 <% for (let i = 1; i <= pages; i++) { %>
                 <% if (i === currentPage) { %>
                 <li class="page-item disabled"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
                 <% } else {%>
                 <li class="page-item"><a class="page-link" href="/main/<%=i%>"><%=i%></a></li>
                 <% } }%>
                 <li class="page-item disabled">
                     <a class="page-link" href="/main/<%=currentPage + 1%>">Next</a>
                 </li>
                 <% } %>
             </ul>

         </nav>
     </div>
 </div>
 <!-- End of pagination -->