<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/head.ejs') %>
</head>

<body>

  <div id="container">
    <%- include ('../partials/nav.ejs') %>


    <div id="firstContainer" class="container-fluid" style="max-width: 600px; border-radius: 10px;">

      <div class="row" style="display: flex;">
        <!-- LEFT SIDE -->
        <div class="col-sm-6" style=" max-width: 315px; background-color: rgb(39, 45, 128); border-radius: 10px;">
          <img src="/images/signup.jpg" style="max-width: 290px;">
        </div>

        <!-- RIGHT SIDE -->
        <div class="col-sm-6">

          </br>
          <h1>Registration</h1>
          <!-- FORM -->
          <form action="/users" method="POST">
            </br>
            <!-- Username -->
            <div class="input-group flex-nowrap">
              <span class="input-group-text" id="addon-wrapping"><i class="fal fa-user"></i></span>
              <input name="username" type="text" class="form-control" placeholder="Username" aria-label="Username"
                aria-describedby="addon-wrapping" autocomplete="off" <%if (user) { %> value="<%=user%>" <% } %>>
            </div>
            </br>
            <!-- Password -->
            <div class="input-group flex-nowrap">
              <span class="input-group-text" id="addon-wrapping"><i class="fal fa-key"></i></span>
              <input name="password" type="password" class="form-control" placeholder="Password" aria-label="Password"
                aria-describedby="addon-wrapping">
            </div>
            <!-- Confirm Password -->
            <div class="input-group flex-nowrap">
              <span class="input-group-text" id="addon-wrapping"><i class="fal fa-key"></i></span>
              <input name="confirmPassword" type="password" class="form-control" placeholder="Confirm Password"
                aria-label="Password" aria-describedby="addon-wrapping">
            </div>
            <%if (tooShort) { %>
            <p style="color:crimson">Password must have at least 4 characters!</p>
            <% } %>
            <%if (userExists) { %>
            <p style="color: orange;">Username already exists!</p>
            <% } %>
            <%if (!match) {%>
            <p style="color: red; margin: 0;">Passwords do not match!</p>
            <% }%>
            <% if (invalidUser) { %>
            <p style="color: crimson">Username cannot contain symbols or caps.</p>
            <% } %>
            <!-- SUBMIT -->
            <input type="submit" class="btn btn-success" value="Sign Up" style="margin-bottom: 20px; margin-top: 10px;">
            <p>Already have an account? <a href="/sessions/new">Sign in.</a></p>
          </form>
        </div>
      </div>
    </div>

    <!-- Rules -->
    <div class="row" style="justify-content: center; display: flex; margin: 20px 0 10px 0;">
      <div class="col-sm-5" style="max-width: 650px;">
        <div class="accordion-item" style="background-color: white;">
          <h2 class="accordion-header" id="headingOne"">
            <button class=" accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
            aria-expanded="true" aria-controls="collapseOne">
            <i class="far fa-info-circle"> Account Rules:</i>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
            data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <p><code>Usernames </code>cannot have symbols/capitalization</p>
              <p><code>Passwords </code>must be at least 4 characters long</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--  -->

  </div>




</body>



</html>